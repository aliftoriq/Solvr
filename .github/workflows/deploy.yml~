name: Deploy to VM

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: â¬‡ï¸ Checkout repository
        uses: actions/checkout@v3

      - name: ðŸ§ Set up SSH and deploy to VM
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.VM_IP }}
          username: ${{ secrets.VM_USERNAME }}
          key: ${{ secrets.VM_SSH_KEY }}
          script: |
            cd ~/Solvr || { echo "âŒ Directory Solvr not found"; exit 1; }

            echo "ðŸ”ª Killing existing app..."
            pkill -f 'solvr-0.0.1-SNAPSHOT.jar' || true

            echo "ðŸ“¥ Pulling latest code..."
            git reset --hard
            git pull origin main

            echo "ðŸ§¹ Building the app..."
            sudo mvn clean package -DskipTests

            echo "ðŸš€ Running the app in background..."
            nohup java -jar target/solvr-0.0.1-SNAPSHOT.jar > solvr.log 2>&1 &
